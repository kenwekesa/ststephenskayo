<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button"
        android:layout_width="372dp"
        android:layout_height="75dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="91dp"
        android:layout_marginEnd="19dp"
        android:text="St. stephens kayo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="385dp"
        android:layout_height="8dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="44dp"
        android:text=""
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <androidx.cardview.widget.CardView
        android:id="@+id/members_card"
        android:layout_width="136dp"
        android:layout_height="142dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="115dp"
        app:cardElevation="@dimen/cardview_compat_inset_shadow"
        app:layout_constraintStart_toEndOf="@+id/guests_card"
        app:layout_constraintTop_toBottomOf="@+id/button2">

        <TextView
            android:id="@+id/members_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Members" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/guests_card"
        android:layout_width="136dp"
        android:layout_height="142dp"
        android:layout_marginStart="41dp"
        android:layout_marginTop="115dp"
        app:cardElevation="@dimen/cardview_compat_inset_shadow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button2">

        <TextView
            android:id="@+id/guests_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Guests" />
    </androidx.cardview.widget.CardView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/purple_500"
        app:circularflow_radiusInDP="52dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>